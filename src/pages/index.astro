---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/sections/Header.astro";
import Socials from "@/components/sections/Socials.astro";
import Footer from "@/components/sections/Footer.astro";
import SplashCursor from "@/components/scripts/SplashCursor.jsx";
import Presence from "@/components/presence/Presence.jsx";
import Dith from "@/components/background/Dith.jsx";

// import Featured from "@/components/sections/Featured.astro";

---

<Layout title="link-uri">
    <div class="splash">
      <SplashCursor client:only="react" />
    </div>
    <div class="ditherfix">
      <Dith client:only="react" />
    </div>

  <main>
    <Header />

    <Socials />
    <!-- <Featured /> -->
    <Footer />
    <Presence client:only="react"/>

  </main>


<!--  <img
    src="https://lanyard.cnrad.dev/api/268156620050006017"
    alt="status"
    class="responsive-image"
  /> -->
</Layout>

<style>
  .responsive-image {
    display: block;
    margin: auto;
    max-width: 100%;
    height: auto;
  }

  @media (min-width: 768px) {
    .responsive-image {
      max-width: 50%;
    }
  }

  .splash {
    position: fixed;
    top: 0; left: 0;
    border-radius: 50%;
    pointer-events: auto;
    animation: splash-fade 0.5s ease-out;
    transform: translate(-50%, -50%);
    z-index: 0;
  }

  @keyframes splash-fade {
    from {
      opacity: 1;
      transform: scale(1);
    }
    to {
      opacity: 0;
      transform: scale(2);
    }
  }
  .ditherfix {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -2;
    pointer-events: auto;
  }

  .ditherfix canvas {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover;
  }

  main {
    width: 100%;
    position: relative;
    z-index: 1;
  }
</style>
