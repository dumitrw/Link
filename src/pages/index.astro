<style>
  .responsive-image {
    display: block;
    margin: auto;
    max-width: 100%;
    height: auto;
  }

  @media (min-width: 768px) {
    .responsive-image {
      max-width: 50%;
    }
  }

  .splash {
    position: fixed;
    top: 0; left: 0;
    border-radius: 50%;
    pointer-events: auto;
    animation: splash-fade 0.5s ease-out;
    transform: translate(-50%, -50%);
    z-index: 0;
  }

  @keyframes splash-fade {
    from {
      opacity: 1;
      transform: scale(1);
    }
    to {
      opacity: 0;
      transform: scale(2);
    }
  }
  .glitch-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -2;
    pointer-events: auto;
  }

  .glitch-container canvas {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover;
  }

  main {
    width: 100%;
    position: relative;
    z-index: 1;
  }
</style>
