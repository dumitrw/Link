---
import { header } from "index.json";
import Section from "@/components/Section.astro";

const { title, description, textColor } = header;
---

<Section>
  <div class="container" style={`color: ${textColor};`}
    <h1>{title}</h1>
    <h2>{description}</h2>
  </div>
</Section>

<style>
  h1 {
    padding-top: rem;
    font-size: 2rem;

  }

  h2 {
    padding-top: 1rem;
    font-size: 1.3rem;
    font-weight: normal;
    text-wrap: pretty;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    margin-top: 70px;
  }
</style>
